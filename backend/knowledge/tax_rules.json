            "Bank statements",
            "Purchase and sales invoices",
            "GST returns",
            "PAN card",
            "Aadhaar card"
        ],
        "freelancer": [
            "Form 26AS / AIS / TIS",
            "Professional receipts/invoices",
            "TDS certificates (Form 16A)",
