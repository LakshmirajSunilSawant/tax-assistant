            "Expense receipts (for deductions)",
            "PAN card",
            "Aadhaar card"
        ],
        "rental_income": [
            "Form 26AS / AIS / TIS",
            "Rent agreement",
            "Rent receipts",
            "Property tax receipts",
            "Home loan interest certificate",
            "Municipal tax payment receipts",
            "PAN card",
            "Aadhaar card"
        ],
        "capital_gains": [
            "Form 26AS / AIS / TIS",
            "Purchase and sale documents",
            "Stock broker statements",
            "Mutual fund statements",
            "Property sale deed",
            "Index cost calculation (for LTCG on property)",
            "PAN card",
            "Aadhaar card"
        ]
    },
